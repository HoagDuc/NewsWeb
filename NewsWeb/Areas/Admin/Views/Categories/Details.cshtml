@model NewsWeb.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
  <!-- Details -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Details User</h6>
    </div>
    <div class="card-body">
      <dl class="row">
        <dt class="col-sm-2">
          @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class="col-sm-10">
          @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class="col-sm-2">
          @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
          @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
          @Html.DisplayNameFor(model => model.Alias)
        </dt>
        <dd class="col-sm-10">
          @Html.DisplayFor(model => model.Alias)
        </dd>
        <dt class="col-sm-2">
          @Html.DisplayNameFor(model => model.MetaDesc)
        </dt>
        <dd class="col-sm-10">
          @Html.DisplayFor(model => model.MetaDesc)
        </dd>
        <dt class="col-sm-2">
          @Html.DisplayNameFor(model => model.MetaKey)
        </dt>
        <dd class="col-sm-10">
          @Html.DisplayFor(model => model.MetaKey)
        </dd>
        <dt class="col-sm-2">
          @Html.DisplayNameFor(model => model.Thumb)
        </dt>
        <dd class="col-sm-10">
          @if (!string.IsNullOrEmpty(Model.Thumb))
          {
            <img width="80" height="80" src="~/images/categories/@Model.Thumb" alt="@Model.CategoryName"/>
          }
        </dd>
        <dt class="col-sm-2">
          @Html.DisplayNameFor(model => model.Ordering)
        </dt>
        <dd class="col-sm-10">
          @Html.DisplayFor(model => model.Ordering)
        </dd>
        <dt class="col-sm-2">
          @Html.DisplayNameFor(model => model.Parents)
        </dt>
        <dd class="col-sm-10">
          @Html.DisplayFor(model => model.Parents)
        </dd>
        <dt class="col-sm-2">
          @Html.DisplayNameFor(model => model.Levels)
        </dt>
        <dd class="col-sm-10">
          @Html.DisplayFor(model => model.Levels)
        </dd>
        <dt class="col-sm-2">
          @Html.DisplayNameFor(model => model.Icon)
        </dt>
        <dd class="col-sm-10">
          @if (!string.IsNullOrEmpty(Model.Icon))
          {
            <img width="80" height="80" src="~/images/categories/@Model.Icon" alt="@Model.CategoryName" />
          }
        </dd>
        <dt class="col-sm-2">
          @Html.DisplayNameFor(model => model.Cover)
        </dt>
        <dd class="col-sm-10">
          @if (!string.IsNullOrEmpty(Model.Cover))
          {
            <img width="80" height="80" src="~/images/categories/@Model.Cover" alt="@Model.CategoryName" />
          }
        </dd>
        <dt class="col-sm-2">
          @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
          @Html.DisplayFor(model => model.Description)
        </dd>
      </dl>

      <div>
        <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-primary">Edit</a> |
        <a asp-action="Index">Back to List</a>
      </div>
    </div>
  </div>
</div>


      

